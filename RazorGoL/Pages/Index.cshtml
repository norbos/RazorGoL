@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<script src="~/js/site.js"></script>

<div class="table-container">
    <div class="button-container">
        <button class="btn">Start</button>
        <button class="btn">Stop</button>
        <form method="post">
            <button type="submit" class="btn" asp-page-handler="Next">Next</button>
        </form>
    </div>
    <div>
        <table class="board-table">
            <tbody>
                @for (int i = 0; i < Model.SimulationState.Board.Length; i++)
                {
                    <tr>
                        @for (int j = 0; j < Model.SimulationState.Board[i].Length; j++)
                        {
                            string cellClass = Model.SimulationState.Board[i][j] == Models.CellState.Alive ?
                            "alive-cell" : "dead-cell";

                            <td>
                                <div id="@i-@j" class="cell @cellClass" onclick="onCellClick(event)" />
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
